<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_member_card_h"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/item_country_img_radio"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_radio"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/item_country_img"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_nation"
            android:scaleType="fitXY" />

        <com.nct.customview.TfTextView
            android:id="@+id/item_country_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_member_card_padding"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/item_member_card_text_size"
            app:typeface_name="@string/font_roboto_regular" />

    </LinearLayout>

    <include layout="@layout/item_line"></include>


</LinearLayout>
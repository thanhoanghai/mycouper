<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent" android:gravity="center_horizontal"
        android:layout_height="wrap_content" android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/user_account_icon_padding"
            android:layout_marginBottom="@dimen/user_account_icon_padding"
            android:layout_width="@dimen/user_account_logo_size"
            android:layout_height="@dimen/user_account_logo_size" android:background="@drawable/icon_user_profile_bg" />


        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView
                style="@style/user_account_title"
                android:text="@string/user_account_firstname"
                app:typeface_name="@string/font_roboto_regular" />
            <com.nct.customview.TfTextView
                android:id="@+id/user_account_firstname"
                style="@style/user_account_title_info"
                android:text="@string/user_account_firstname"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView
                style="@style/user_account_title"
                android:text="@string/user_account_lastname"
                app:typeface_name="@string/font_roboto_regular" />
            <com.nct.customview.TfTextView
                android:id="@+id/user_account_lastname"
                style="@style/user_account_title_info"
                android:text="@string/user_account_firstname"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView
                style="@style/user_account_title"
                android:text="@string/user_account_birthday"
                app:typeface_name="@string/font_roboto_regular" />
            <com.nct.customview.TfTextView
                android:id="@+id/user_account_birthday"
                style="@style/user_account_title_info"
                android:text="@string/user_account_birthday"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView
                style="@style/user_account_title"
                android:text="@string/user_account_civility"
                app:typeface_name="@string/font_roboto_regular" />
            <com.nct.customview.TfTextView
                android:id="@+id/user_account_civility"
                style="@style/user_account_title_info"
                android:text="@string/user_account_civility"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView
                style="@style/user_account_title"
                android:text="@string/user_account_phone"
                app:typeface_name="@string/font_roboto_regular" />
            <com.nct.customview.TfTextView
                android:id="@+id/user_account_phone"
                style="@style/user_account_title_info"
                android:text="@string/user_account_phone"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView
                style="@style/user_account_title"
                android:text="@string/user_account_lastlogin"
                app:typeface_name="@string/font_roboto_regular" />
            <com.nct.customview.TfTextView
                android:id="@+id/user_account_lastlogin"
                style="@style/user_account_title_info"
                android:text="@string/user_account_lastlogin"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>

        <com.nct.customview.TfTextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/user_account_login_click_to_edit" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:textColor="@color/black" android:gravity="center_horizontal" android:textSize="15sp"
            app:typeface_name="@string/font_roboto_regular" />

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView
                android:id="@+id/user_account_email" android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/user_account_icon_padding" android:drawablePadding="@dimen/user_account_icon_padding"
                android:drawableLeft="@drawable/icon_email"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="@color/grey_info_text_card" android:textSize="15sp"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="@dimen/user_account_bar_text_h" android:layout_marginTop="@dimen/user_account_bar_text_marintop"
            android:background="@color/grey_info_card"
            >
            <com.nct.customview.TfTextView android:id="@+id/user_account_password"
                android:layout_marginLeft="@dimen/user_account_icon_padding" android:drawablePadding="@dimen/user_account_icon_padding"
                android:drawableLeft="@drawable/icon_lock" android:text="@string/user_account_password_click_here"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical"
                android:textColor="@color/grey_info_text_card" android:textSize="15sp"
                app:typeface_name="@string/font_roboto_regular" />
        </LinearLayout>


    </LinearLayout>

    </ScrollView>


</LinearLayout>
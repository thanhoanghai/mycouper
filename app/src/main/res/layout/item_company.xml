<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_member_card_h"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:background="@drawable/icon_border_grey1">

        <FrameLayout
            android:layout_width="@dimen/item_company_icon_size"
            android:layout_height="@dimen/item_company_icon_size">

            <ImageView
                android:id="@+id/item_company_img"
                android:layout_width="@dimen/item_company_icon_size"
                android:layout_height="@dimen/item_company_icon_size"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/item_membercard_img"
                android:layout_width="@dimen/item_company_icon_size"
                android:layout_height="@dimen/item_company_icon_size"
                android:background="@drawable/icon_border_grey1" />
        </FrameLayout>


        <com.nct.customview.TfTextView
            android:id="@+id/item_company_tvtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_member_card_padding"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/item_member_card_text_size"
            app:typeface_name="@string/font_roboto_regular" />

    </LinearLayout>

    <!--<include layout="@layout/item_line"></include>-->


</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_layout_showcase"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/layout_showcase_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:background="#4b000000"
        android:padding="5dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.nct.customview.CirclePageIndicator
            android:id="@+id/layout_showcase_indicator"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip" />

        <com.nct.customview.TfTextView
            android:id="@+id/layout_showcase_tv_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:drawablePadding="5dp"
            android:text="Skip"
            android:drawableRight="@drawable/icon_arrow_right"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:typeface_style="bold"
            app:typeface_name="@string/font_roboto_regular" />

    </FrameLayout>


</FrameLayout>
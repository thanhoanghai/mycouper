<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_member_card_h"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.nct.customview.TfTextView
            android:id="@+id/item_language_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/item_member_card_padding"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/item_member_card_text_size"
            app:typeface_name="@string/font_roboto_regular" />

        <ImageView
            android:id="@+id/item_language_img_radio"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_radio"
            android:scaleType="fitXY" />


    </LinearLayout>

    <include layout="@layout/item_line"></include>


</LinearLayout>
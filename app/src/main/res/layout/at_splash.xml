<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/splash_icon_size"
        android:layout_height="@dimen/splash_icon_size"
        android:background="@drawable/splash_icon" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        android:background="@drawable/splash_text_mycouper" />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/splash_icon_line" />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="335dp"
        android:layout_height="53dp"
        android:scaleType="fitXY"
        android:background="@drawable/splash_text_des" />

</LinearLayout>
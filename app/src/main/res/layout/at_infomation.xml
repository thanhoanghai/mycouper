<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <include layout="@layout/item_top_bar" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/splash_icon" />

    <com.nct.customview.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:typeface_name="@string/font_raleway_bold"
        app:typeface_style="bold" />


    <com.nct.customview.TfTextView
        android:id="@+id/at_infomation_tvversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/version_user"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        app:typeface_style="italic"
        app:typeface_name="@string/font_roboto_regular" />


    <include
        layout="@layout/item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />


    <com.nct.customview.TfTextView
        android:id="@+id/at_infomation_tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/introduce"
        android:textColor="@color/white"
        android:drawableRight="@drawable/icon_arrow_right"
        android:textSize="20sp"
        app:typeface_name="@string/font_roboto_regular" />


    <com.nct.customview.TfTextView
        android:id="@+id/at_infomation_tv_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/term_and_condition"
        android:textColor="@color/white"
        android:drawableRight="@drawable/icon_arrow_right"
        android:textSize="20sp"
        app:typeface_name="@string/font_roboto_regular" />



</LinearLayout>
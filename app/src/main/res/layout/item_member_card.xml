<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_member_card_new_h"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/icon_border_grey1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <FrameLayout
            android:layout_width="55dp"
            android:layout_height="55dp">

            <ImageView android:layout_gravity="center"
                android:id="@+id/item_membercard_img"
                android:layout_width="@dimen/item_member_card_icon_size_new"
                android:layout_height="@dimen/item_member_card_icon_size_new"
                android:src="@color/grey_info_card" />

            <ImageView android:layout_gravity="center"
                android:layout_width="@dimen/item_member_card_icon_size_new"
                android:layout_height="@dimen/item_member_card_icon_size_new"
                android:background="@drawable/icon_border_grey1" />

            <com.nct.customview.TfTextView android:gravity="center"
                android:id="@+id/item_membercard_tv_number_news"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:background="@drawable/shape_circle_button_normal"
                android:textSize="9sp"
                android:text="1" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_member_card_padding"
            android:orientation="vertical">

            <com.nct.customview.TfTextView
                android:id="@+id/item_membercard_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/item_member_card_text_size"
                app:typeface_name="@string/font_roboto_regular" />

            <com.nct.customview.TfTextView
                android:id="@+id/item_membercard_tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/app_name"
                android:textColor="@color/grey"
                android:textSize="@dimen/item_member_card_text_size_small"
                app:typeface_name="@string/font_roboto_regular" />


        </LinearLayout>

    </LinearLayout>

    <!--<include layout="@layout/item_line"></include>-->


</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_member_card_h"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/item_member_card_padding"
    android:paddingRight="@dimen/item_member_card_padding"
    >

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal" android:gravity="center_vertical"
        android:layout_height="0dp" android:layout_weight="1">

        <ImageView
            android:id="@+id/item_membercard_img"
            android:layout_width="@dimen/item_member_card_icon_size"
            android:layout_height="@dimen/item_member_card_icon_size"
            android:background="@color/black" />


        <LinearLayout
            android:layout_marginLeft="@dimen/item_member_card_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.nct.customview.TfTextView
                android:id="@+id/item_membercard_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/item_member_card_text_size"
                app:typeface_name="@string/font_roboto_regular"
                />

            <com.nct.customview.TfTextView
                android:id="@+id/item_membercard_tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/app_name"
                android:textColor="@color/grey"
                android:textSize="@dimen/item_member_card_text_size"
                app:typeface_name="@string/font_roboto_regular"
                />


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/item_line"></include>


</LinearLayout>